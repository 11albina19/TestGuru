<div class="navigation">
  <%= link_to t('.name'), tests_path %>
  <% if user_signed_in? %>
    <span><%= t('.welcome')%><b><%= current_user.email %></b></span>
    <%= link_to t('.logout'), destroy_user_session_path, method: :delete, data: { turbo_method: :delete}, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to t('.login'), new_user_session_path%>
    <%= link_to t('.register'), new_user_registration_path%>
  <% end %>
</div>
<%= render 'shared/flash' %>
