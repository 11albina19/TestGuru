<h3><%= question_header(:admin, @question) %></h3>
<%= form_with model: [@test, @question], local: true do |form| %>
<%= render 'shared/errors', resource: @question %>
<p>
  <%= form.label :body, 'Вопрос'  %>
  <%= form.text_field :body, id: :question_body %>
</p>
<p>
  <%= form.label :test_id, 'Тест'  %>
  <%= form.collection_select :test_id, Test.all, :id, :title, prompt: true %>
</p>
  <p><%= form.submit 'Сохранить' %></p>
<% end %>
<%= link_to 'Назад', admin_test_path(@question.test) %>
