<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { "test_id": test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test) %></td>
  <td class="align-middle"><%= amount_questions(test) %></td>
  <td class="align-middle"><%= link_to t('.open'), admins_test_path(test) %></td>
  <td class="align-middle">
    <%= link_to t('.edit'),
                edit_admins_test_path(test),
                data: { "test_id": test.id },
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete'),
                admins_test_path(test),
                data: { turbo_method: :delete, turbo_confirm: t('.sure') },
                class: "btn btn-outline-danger btn-sm" %>
  </td>
</tr>
